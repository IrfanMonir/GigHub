@model IEnumerable<GigHub.Models.Gig>
@if (Model != null)
{
    <h3 class="page-header">My upcoming gigs</h3>
    <table class="table table-bordered">
        <thead>

            <tr>


                <th scope="col">Venue</th>
                <th scope="col">Genre</th>
                <th scope="col">Date Time</th>
                <th scope="col">Actions</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var gig in Model)
            {
                <tr>
                    <td>
                        @gig.Venue
                    </td>
                    <td>
                        @gig.Genre.Name
                    </td>
                    <td>
                       @gig.DateTime
                    </td>
                     <td>
                        <button onclick="window.location.href='@Url.Action("Edit", "Gigs",new {Id=gig.Id })'" class="data-btn btn btn-primary" type="button"><i class="fas fa-pen mr-1"></i> Edit</button>
                        <button data-href="@Url.Action("Delete", "AccomodationPackages",new {Id=gig.Id })" type="button" class="data-btn btn btn-danger"><i class="fas fa-trash-alt mr-1"></i> Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger" role="alert">
        Sorry! NO Upcoming gigs exist.
    </div>
}



