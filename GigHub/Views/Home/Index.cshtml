@model GigHub.ViewModels.GigsListingViewModel
@if (Model != null && Model.Gigs != null && Model.Gigs.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>

                <th scope="col">Date Time</th>
                <th scope="col">Artist Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gig in Model.Gigs)
            {
                <tr>
                    <td>
                        @gig.DateTime
                    </td>
                    <td>
                        @gig.Artist.Name
                    </td>
                    <td>
                        <button data-href="@Url.Action("Action", "AccomodationPackages", new { ID = gig.Id })" type="button" class="data-btn btn btn-primary" data-toggle="modal" data-target="#actionModal"><i class="fas fa-pen mr-1"></i>Edit</button>
                        <button data-href="@Url.Action("Delete", "AccomodationPackages", new { ID = gig.Id })" type="button" class="data-btn btn btn-danger" data-toggle="modal" data-target="#actionModal"><i class="fas fa-trash-alt mr-1"></i>Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger" role="alert">
        Sorry! NO Gigs exist.
    </div>
}
